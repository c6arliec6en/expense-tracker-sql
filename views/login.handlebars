<div class="row mt-5">
  <div class="col-md-5 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-2">Login</h1>

      {{> messages}}
      {{{info.message}}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">E-mail</label>
          <input type="email" id="email" name="email" placeholder="E-mail" class="form-control"
            value="{{{user.email}}}">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="password" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>

      </form>

      <p class="mt-3">
        No Account? <a href="/users/register">Register now</a>
      </p>

    </div>
  </div>


</div>