<div class="container mt-5">
  <form action="/records/edit/{{{record.id}}}" method="POST">
    <div class="row justify-content-center">
      <div class="card card-body col-md-5">
        <h2>＊為必填欄位</h2>
        <div class="mt-3">
          <label for="name">*名稱:</label>
          <input type="text" name="name" id="name" value="{{{record.name}}}" class="form-control" required>
        </div>

        <div class="mt-3">
          <label for="date">*日期:</label>
          <input type="date" id="date" name="date" value="{{{record.date}}}" min="2018-01-01" max=""
            class="form-control">
        </div>


        <div class="form-group mt-3">
          <label for="category">*類別:</label>
          <select class="form-control" id="category" name="category" required>
            <option value="home" {{#compare record.category '==' 'home'}}selected{{/compare}}>家居物業</option>
            <option value="travel" {{#compare record.category  '==' 'travel'}}selected{{/compare}}>交通出行</option>
            <option value="leisure" {{#compare record.category  '==' 'leisure'}}selected{{/compare}}>休閒娛樂</option>
            <option value="food" {{#compare record.category  '==' 'food'}}selected{{/compare}}>餐飲食品</option>
            <option value="other" {{#compare record.category  '==' 'other'}}selected{{/compare}}>其他</option>
          </select>
        </div>


        <div class="">
          <label for="amount">*金額:</label>
          <input type="text" name="amount" id="amount" value="{{{record.amount}}}" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-success mt-5">編輯</button>
      </div>
    </div>


  </form>
</div>